# Directory for executable files
BIN_DIR=$(ROOT_DIR)/bin

# Paths to executable files for MC and MD simulations.
MCSIM_EXE=$(BIN_DIR)/mcSim$(MCMD_SUFFIX)
MDSIM_EXE=$(BIN_DIR)/mdSim$(MCMD_SUFFIX)

