class MpiPlan 
{

   /**
   * Constructor.
   */
   MpiPlan(MPI::Intracomm& systemComm, bool hasMasterProc, 
           bool hasSnapshots);

   /**
   * Get number of processsors in system communicator (including master).
   */
   int nProc();

   /**
   * Number of spatial domains.
   */
   int nDomain();

   /**
   * Does this system have a separate master processor?
   * 
   * Return true if this is a separate master processor or
   * if their is no separate master processor but this is 
   * the root (rank = 0) node.
   */
   bool hasMasterProc();

   /**
   * Does the master processor maintain global snapshots?
   */
   bool hasSnapshots();

   /**
   * Is this the master I/O processor for this system?
   * 
   * Return true if this is a separate master processor or if 
   * their is no separate master processor but this is the root 
   * (rank = 0) node.
   */
   bool isMaster();

   /**
   * Is this processor associated with a spatial domain?
   */
   bool isDomainProc();

   /**
   * Get the system communicator by reference.
   */
   MPI::Communicator& systemCommunicator() const;

   /**
   * Get the domain communicator by reference.
   */
   MPI::Communicator& domainCommunicator() const;

private:

   /**
   * System communicator (including any extra master proc)
   */
   MPI::IntraComunicator* systemCommPtr_;

   /**
   * Domain communicator (excluding any extra master proc)
   */
   MPI::IntraComunicator* domainCommPtr_;

   /**
   * Does this processor have a separate master processor?
   */
   bool hasMasterProc_;

}
